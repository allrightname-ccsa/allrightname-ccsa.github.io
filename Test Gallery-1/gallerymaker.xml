			<metadataView>
				<metadataViewField>
					<widthPercentage>0.25</widthPercentage>
					<titles>false</titles>
					<captions>true</captions>
				</metadataViewField>
				<metadataViewBgColor>
					<color>999999</color>
					<alpha>100</alpha>
				</metadataViewBgColor>
				<metadataViewTitle>
					<fontFamily>"$$$/FlashGallery/font/sans/familyname=Myriad Web Pro"</fontFamily>
					<color>222222</color>
					<linkColor>0000ff</linkColor>
					<size>14</size>
					<align>left</align>
				</metadataViewTitle>
				<metadataViewText>
					<fontFamily>"$$$/FlashGallery/font/sans/familyname=Myriad Web Pro"</fontFamily>
					<color>222222</color>
					<linkColor>0000ff</linkColor>
					<size>14</size>
					<align>left</align>
				</metadataViewText>
				<metadataViewBtnBorder>
					<color>505050</color>
					<alpha>100</alpha>
				</metadataViewBtnBorder>
				<metadataViewBtnBackground>
					<color>fefefe</color>
					<alpha>100</alpha>
				</metadataViewBtnBackground>
				<metadataViewBtnFore>
					<color>737373</color>
					<alpha>100</alpha>
				</metadataViewBtnFore>
			</metadataView>
			
			<galleryInfo>
				<galleryInfoBgColor>
					<color>bbbbbb</color>
					<alpha>100</alpha>
				</galleryInfoBgColor>
				<galleryInfoBorderColor>
					<color>7f7f7f</color>
					<alpha>100</alpha>
				</galleryInfoBorderColor>
				<galleryInfoTextField>
					<width>400</width>
					<height>200</height>
				</galleryInfoTextField>
				<galleryInfoText>
					<fontFamily>"$$$/FlashGallery/font/sans/familyname=Myriad Web Pro"</fontFamily>
					<color>3f3f3f</color>
					<linkColor>0000ff</linkColor>
					<size>12</size>
					<align>left</align>
				</galleryInfoText>
				<galleryInfoBtnBorder>
					<color>505050</color>
					<alpha>100</alpha>
				</galleryInfoBtnBorder>
				<galleryInfoBtnBackground>
					<color>fefefe</color>
					<alpha>100</alpha>
				</galleryInfoBtnBackground>
				<galleryInfoBtnFore>
					<color>737373</color>
					<alpha>100</alpha>
				</galleryInfoBtnFore>
			</galleryInfo>
			
		</mx:Model>
	
		<!-- Views -->
		<mx:VBox>
		
			<!-- Metadata -->
			
			<mx:CheckBox id="enableHeadersView" label="$$$/FlashGallery1/gallerymaker/slideshow/enableHeaders=Show Title Bar"/>
			
			<mx:Label id="galleryTitleLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/titleField=Gallery Title:"/>
			<mx:TextInput id="groupTitleView" width="163" editable="true" maxChars="50"/>
			
			<mx:Label id="galleryCaptionLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/siteTitleField=Gallery Caption:"/>
			<mx:TextInput id="siteTitleView" width="163" editable="true" maxChars="50"/>
						
			<mx:Label id="aboutGalleryLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/descriptionField=About This Gallery:"/>
			<mx:TextArea id="groupDescriptionView" width="163" height="75" editable="true" maxChars="1000"/>
			
			<mx:HRule id="galleryInfoRule" width="163" height="5"/>
			
			<mx:Label id="yourNameLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/nameField=Your Name:"/>
			<mx:TextInput id="contactNameView" width="163" editable="true" maxChars="50"/>
			
			<mx:Label id="emailLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/emailField=Email Address:"/>
			<mx:TextInput id="contactEmailView" width="163" editable="true" maxChars="50"/>			
						
			<mx:HRule width="163" height="5"/>
			
			<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/slideshowHead=Slideshow" fontWeight="bold"/>
			
			<mx:HBox verticalAlign="middle">
				<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/slideDuration=Slide Duration:"/>
				<mx:Spacer width="5"/>
				<mx:NumericStepper id="slideDurationView" minimum="1" maximum="120"/>
				<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/secondsLabel=seconds"/> 
			</mx:HBox>
			
			<mx:HBox verticalAlign="middle">
				<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/transitionEffect=Transition Effect:"/>
				<mx:Spacer width="-1"/>
				<mx:ComboBox id="transitionEffectView">
					<mx:dataProvider>
						<mx:Array>
							<mx:Object label="$$$/FlashGallery1/gallerymaker/slideshow/fade=Fade" data="fade"/>
							<mx:Object label="$$$/FlashGallery1/gallerymaker/slideshow/cut=Cut" data="cut"/>
							<mx:Object label="$$$/FlashGallery1/gallerymaker/slideshow/iris=Iris" data="iris"/>
							<mx:Object label="$$$/FlashGallery1/gallerymaker/slideshow/blinds=Blinds" data="blinds"/>
							<mx:Object label="$$$/FlashGallery1/gallerymaker/slideshow/dissolve=Dissolve" data="pixDissolve"/>
						</mx:Array>
					</mx:dataProvider>
				</mx:ComboBox>
			</mx:HBox>
			
			<mx:HRule width="163" height="5"/>
			
			<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/bandwidthHead=Optimize For" fontWeight="bold"/>
			
			<mx:HBox verticalAlign="middle">
				<mx:ComboBox id="bandwidthView">
					<mx:dataProvider>
						<mx:Array>
							<mx:Object label="$$$/FlashGallery1/gallerymaker/slideshow/broadband=Broadband (large images)" data="broadband"/>
							<mx:Object label="$$$/FlashGallery1/gallerymaker/slideshow/dialup=Dial-up (medium images)" data="dialup"/>
						</mx:Array>
					</mx:dataProvider>
				</mx:ComboBox>
			</mx:HBox>
	
			<mx:HRule width="163" height="5"/>
			
			<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/backgroundHead=Background" fontWeight="bold"/>
		
			<mx:HBox verticalAlign="middle">
				<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/backgroundColor=Main:"/>
				<mx:Spacer width="-1"/>
				<mx:ColorPicker id="backgroundBgColorView"/>
			</mx:HBox>
			
			<mx:HBox verticalAlign="middle" horizontalGap="0">
				<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/slideshowBackground=Slideshow:"/>
				<mx:Spacer width="-1"/>
				<mx:ColorPicker id="slideshowBackgroundColorView"/>
			</mx:HBox>
			
			<mx:HRule width="163" height="5"/>
			
			<mx:VBox verticalAlign="middle" horizontalGap="0">
				<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/borderOpacity=Border Opacity:"/>
				<mx:HBox verticalAlign="middle" horizontalGap="0">
					<mx:Label text="- " width="10"/>
					<mx:HSlider id="borderOpacityView" width="90" minimum="0" maximum="100"/>
					<mx:Label text=" +"/>
				</mx:HBox>
			</mx:VBox>
			
			<mx:VBox verticalAlign="middle" horizontalGap="0">
				<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/buttonOpacity=Button Opacity:"/>
				<mx:HBox verticalAlign="middle" horizontalGap="0">
					<mx:Label text="- " width="10"/>
					<mx:HSlider id="buttonOpacityView" width="90" minimum="0" maximum="100"/>
					<mx:Label text=" +"/>
				</mx:HBox>
			</mx:VBox>
			
			<mx:HRule width="163" height="5"/>
			
			<mx:Label id="titleBarHeadLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/headerBarHead=Title Bar" fontWeight="bold"/>
			
			<mx:HBox verticalAlign="middle" horizontalGap="0">
				<mx:Label id="headerColorLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/color=Color:"/>
				<mx:Spacer width="-1"/>
				<mx:ColorPicker id="headerBarColorView"/>
			</mx:HBox>
			
			<mx:HBox verticalAlign="middle" horizontalGap="0" pse:unless="ja_jp">
				<mx:Label id="headerFontLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/font=Font:"/>
				<mx:Spacer width="-1"/>
				<mx:ComboBox id="headerBarTextFontView">
					<mx:dataProvider>
						<mx:Array>
							<mx:Object label="$$$/FlashGallery/font/sans/displayname=Myriad" data="$$$/FlashGallery/font/sans/familyname=Myriad Web Pro"/>
							<mx:Object label="$$$/FlashGallery/font/serif/displayname=Times" data="$$$/FlashGallery/font/serif/familyname=Times"/>
						</mx:Array>
					</mx:dataProvider>
				</mx:ComboBox>
			</mx:HBox>
			
			<mx:HBox verticalAlign="middle" horizontalGap="0">
				<mx:Label id="headerTextColorLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/textColor=Text Color:"/>
				<mx:Spacer width="-1"/>
				<mx:ColorPicker id="headerBarTextColorView"/>
			</mx:HBox>
	
			<mx:Label id="menuBarHeadLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/menuBarHead=Menu Bar" fontWeight="bold"/>

			<mx:HBox verticalAlign="middle" horizontalGap="0">
				<mx:Label id="menuBarColorLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/color=Color:"/>
				<mx:Spacer width="-1"/>
				<mx:ColorPicker id="menuBarBackgroundColorView"/>
			</mx:HBox>
			
			<mx:HBox verticalAlign="middle" horizontalGap="0">
				<mx:Label id="menuBarHoverLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/hoverColor=Hover Color:"/>
				<mx:Spacer width="-1"/>
				<mx:ColorPicker id="menuBarHoverColorView"/>
			</mx:HBox>

			<mx:HBox verticalAlign="middle" horizontalGap="0">
				<mx:Label id="menuBarTextColorLabel" text="$$$/FlashGallery1/gallerymaker/slideshow/textColor=Text Color:"/>
				<mx:Spacer width="-1"/>
				<mx:ColorPicker id="menuBarTextColorView"/>
			</mx:HBox>	
			
			<mx:HRule id="titleBarDetailsRule" width="163" height="5"/>
			
			<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/captionFileHead=Caption and File Name" fontWeight="bold"/>
			
			<mx:CheckBox id="showCaptionView" label="$$$/FlashGallery1/gallerymaker/slideshow/showCaptions=Show Captions"/>
			
			<mx:CheckBox id="showTitleView" label="$$$/FlashGallery1/gallerymaker/slideshow/showFileNames=Show File Names"/>
			
			<mx:HBox verticalAlign="middle" pse:unless="ja_jp">
				<mx:Label text="$$$/FlashGallery1/gallerymaker/slideshow/captionFont=Font:"/>
				<mx:Spacer width="-1"/>
				<mx:ComboBox id="captionFontView">
					<mx:dataProvider>
						<mx:Array>
							<mx:Object label="$$$/FlashGallery/font/sans/displayname=Myriad" data="$$$/FlashGallery/font/sans/familyname=Myriad Web Pro"/>
							<mx:Object label="$$$/FlashGallery/font/serif/displayname=Times" data="$$$/FlashGallery/font/serif/familyname=Times"/>
						</mx:Array>
					</mx:dataProvider>
				</mx:ComboBox>
			</mx:HBox>
		
		</mx:VBox>
		
		<!-- Bindings -->
		
		<!-- Metadata -->
		
		<!-- Note site title and group title are intentionally swapped; this is to change the design from the way the swf is built -->
		
		<mx:Binding source="groupTitleView.text" destination="metadata.siteTitle"/>
		<mx:Binding source="metadata.siteTitle" destination="groupTitleView.text"/>
				
		<mx:Binding source="siteTitleView.text" destination="metadata.groupTitle"/>
		<mx:Binding source="metadata.groupTitle" destination="siteTitleView.text"/>

		<mx:Binding source="groupDescriptionView.text" destination="metadata.groupDescription"/>
		<mx:Binding source="metadata.groupDescription" destination="groupDescriptionView.text"/>
		
		<mx:Binding source="contactNameView.text" destination="metadata.contactName"/>
		<mx:Binding source="metadata.contactName" destination="contactNameView.text"/>
		
		<mx:Binding source="contactEmailView.text" destination="metadata.contactEmail"/>
		<mx:Binding source="metadata.contactEmail" destination="contactEmailView.text"/>
		
		<!-- Enable header bar and menu bar: both tied to same check box -->
		
		<mx:Binding source="enableHeadersView.selected" destination="appearance.headerBar.headerBarEnabled.enabled"/>
		<mx:Binding source="appearance.headerBar.headerBarEnabled.enabled" destination="enableHeadersView.selected"/>
		
		<mx:Binding source="enableHeadersView.selected" destination="appearance.menuBar.menuBarEnabled.enabled"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="enableHeadersView.selected"/>
		
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="groupTitleView.visible"/>
        <mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="siteTitleView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="groupDescriptionView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="contactNameView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="contactEmailView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="headerBarColorView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="headerBarTextFontView.visible" pse:unless="ja_jp"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="headerBarTextColorView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="menuBarBackgroundColorView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="menuBarHoverColorView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="menuBarTextColorView.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="galleryTitleLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="galleryCaptionLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="aboutGalleryLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="galleryInfoRule.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="yourNameLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="emailLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="titleBarHeadLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="headerColorLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="headerFontLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="headerTextColorLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="menuBarHeadLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="menuBarColorLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="menuBarHoverLabel.visible"/>
		<mx:Binding source="appearance.menuBar.menuBarEnabled.enabled" destination="menuBarTextColorLabel.visible"/>
